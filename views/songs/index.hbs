<br>
<h1>
  {{title}}
</h1>

<br>

{{! To Show data }}
<table class="table table-striped table-hover">
  <thead>
    <th>Name</th>
    <th>Genre</th>
    <th>Musician</th>
    <th>Playlist</th>
    <th>Download</th>
    {{#if user}}
      <th>Actions</th>
    {{/if}}
  </thead>
  <tbody>
    {{#each dataset}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.genre}}</td>
        <td>{{this.singer}}</td>
        <td>{{this.playlist}}</td>
        <td>
            <a href="/songs/download/{{this._id}}" class="btn btn-warning">Download</a>
        </td>
        {{#if ../user}}
          <td>
            <a href="/songs/edit/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/songs/delete/{{this._id}}" class="btn btn-danger"
              onclick="return confirmDeletion();">Delete</a>
          </td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>

<br>

{{#if user}}
<a href="/songs/add" class="a-link">Add a new Song</a>
{{/if}}